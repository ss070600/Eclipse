<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

	<!-- setter injection approach below that uses setter methods setId(),setName() 
		of Employee class so it is must to write setters,getters and default constructors 
		in this approach -->
	<bean id="emp1" class="com.beans.Employee">
		<property name="id" value="101" /> <!-- push the value setter injection : setEmpID(101) -->
		<property name="name" value="Rahul" />
	</bean>

	<bean id="emp2" class="com.beans.Employee">
		<property name="id" value="102" /> <!-- push the value setter injection : setEmpID(101) -->
		<property name="name" value="Virat" />
	</bean>

</beans>
